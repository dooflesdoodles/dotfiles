term xterm-256color

autodetach on

startup_message off

hardstatus on
hardstatus string "%H - [screen %n%?: %t%?]"

defscrollback 5000

#caption always "%{= wk} %-w%{= KW} %n %t %{-}%+w %= | @%H | %l | %Y-%m-%d %c "
caption always "%{= wk} %-w%{= kW} %n %t %{-}%+w"

bindkey "^[[1;2C" next
bindkey "^[[1;2D" prev
